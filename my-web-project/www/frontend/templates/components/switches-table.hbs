<div>
{{#if user.isLogged}}
        <h1>{{i18n 'Switches'}}</h1>
{{/if}}
<div id="switches-table">
  <p>Switches ({{switch.length}}) num.</p>
  {{#if switch.length}}
    <table border="1">
      <thead>
      <tr>
        <th>{{i18n 'Title'}}</th>
        <th>{{i18n 'Author'}}</th>
        <th>{{i18n 'Actions'}}</th>
      </tr>
      </thead>
      <tbody>
      {{#each switch}}
        <tr fronty-component="SwitchRowComponent" key="{{id}}" model="switches[{{@index}}]" id="item-{{id}}"></tr>
      {{/each}}
    </tbody>
    </table>
  {{/if}}
</div>
{{#if user.isLogged}}
  <a href='#add-switch'>{{i18n 'Add switch'}}</a>
{{/if}}
</div>